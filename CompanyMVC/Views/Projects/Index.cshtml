@model IEnumerable<CompanyMVC.Entities.project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var index = 1;
}
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Index</strong>
                        <p>
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                    <div class="card-body">
                        <table id="projects" class="table table-striped table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.company)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.requirements)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.budget)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.department_id)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.start_date)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.end_date)
                                    </th>
                                    <th scope="col"> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td scope="row">@index</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.company)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.requirements)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.budget)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.department.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.start_date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.end_date)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning" })
                                            @Html.ActionLink("View", "View", new { id = item.id }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>

                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section scripts {
    
    <script>

        $(document).ready(function () {

            $("#projects").DataTable();
        });

    </script>
    }