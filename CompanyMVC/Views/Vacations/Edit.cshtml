@model CompanyMVC.viewModels.VacationViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <strong>Edit</strong> Employee Vacation
                    </div>
                    <div class="card-body card-block">


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Vacation of @Model.Empl_vac.employee.FullName</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Empl_vac.id)

                                <div class="form-group">
                                    @Html.HiddenFor(model => model.Empl_vac.employee.name, htmlAttributes: new { @class = "control-label " })
                                    <div class="controls">
                                        @Html.HiddenFor(model => model.Empl_vac.employee_id, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Empl_vac.employee_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Empl_vac.vacation.vacation_type, htmlAttributes: new { @class = "control-label " })
                                    <div class="controls">
                                        @*@Html.EditorFor(model => model.Empl_vac.vacation_id, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.DropDownListFor(model => model.Empl_vac.vacation_id, new SelectList(Model.Vacations, "id", "vacation_type"), "Select Vacation", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Empl_vac.vacation_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Empl_vac.vac_days, htmlAttributes: new { @class = "control-label " })
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Empl_vac.vac_days, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Empl_vac.vac_days, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Empl_vac.start_date, htmlAttributes: new { @class = "control-label " })
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Empl_vac.start_date, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Empl_vac.start_date, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Empl_vac.end_date, htmlAttributes: new { @class = "control-label " })
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Empl_vac.end_date, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Empl_vac.end_date, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 controls">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
